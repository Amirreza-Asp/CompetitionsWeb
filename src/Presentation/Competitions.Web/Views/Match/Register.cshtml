@using Competitions.Domain.Dtos.Matches.Matches;
@using System.Security.Claims;
@model RegisterMatchListDto

<form method="post" enctype="multipart/form-data">
    <input asp-for="TeamCount" hidden />
    <input asp-for="MatchId" hidden />
    <input asp-for="Gender" hidden />
    <input asp-for="Gender" hidden />

    <div class="d-flex flex-column flex-md-row align-items-md-center  justify-content-between mb-4">
        <h3 class="mb-4 mb-lg-0">ثبت نام در مسابقه</h3>
    </div>
    <section class="card shadow-sm ">
        <div class="row">
            @for (int i = 0; i < Model.TeamCount; i++)
            {
                if (i == 0 && Model.TeamCount > 1)
                {
                    <h4>نماینده</h4>
                    <p class="text-secondary">اطلاعات نماینده حتما باید در میزخدمت ثبت شده باشد و نیازی به وارد کردن نام ندارد</p>
                    <div class="col-md-4 mb-3">
                        <input asp-for="RegisterMatches[i].Name" value="test" hidden/>
                        <input asp-for="RegisterMatches[i].Family" value="test" hidden/>
                        <label class="form-label">کد ملی</label>
                        <input class="form-control" asp-for="RegisterMatches[i].NationalCode" type="text">
                        <span class="text-danger" asp-validation-for="RegisterMatches[i].NationalCode"></span>
                    </div>
                }
                else if (Model.TeamCount > 1)
                {
                    <h4>هم تیمی @(i)</h4>
                    <div class="col-md-4 mb-3">
                        <label class="form-label">نام</label>
                        <input class="form-control" asp-for="RegisterMatches[i].Name" type="text">
                        <span class="text-danger" asp-validation-for="RegisterMatches[i].Name"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label">نام خانوادگی</label>
                        <input class="form-control" asp-for="RegisterMatches[i].Family" type="text">
                        <span class="text-danger" asp-validation-for="RegisterMatches[i].Family"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label">کد ملی</label>
                        <input class="form-control" asp-for="RegisterMatches[i].NationalCode" type="text">
                        <span class="text-danger" asp-validation-for="RegisterMatches[i].NationalCode"></span>
                    </div>
                }
                else
                {
                    <div class="col-6 mb-3">
                        <input asp-for="RegisterMatches[i].Name" value="test" />
                        <input asp-for="RegisterMatches[i].Family" value="test" />
                        <label class="form-label">کد ملی</label>
                        <input class="form-control" asp-for="RegisterMatches[i].NationalCode" type="text">
                        <span class="text-danger" asp-validation-for="RegisterMatches[i].NationalCode"></span>
                    </div>
                }

                
                <div class="row">
                    @if (Model.Documents.Any())
                    {
                        <h5 class="my-3">مدارک</h5>
                    }
                    @for (int j = 0; j < Model.Documents.Count(); j++)
                    {
                        <div class="col-md-4 mb-3">
                            <label class="form-label">@Model.Documents.ElementAt(j).Evidence.Title</label>
                            <input name="registerMatches[@i].FilesNames[@j]" value="@Model.Documents.ElementAt(j).Evidence.Title" hidden />
                            <input name="registerMatches[@i].Files[@j]" type="file" class="form-control" accept="@Model.Documents.ElementAt(j).Type" hidden onchange="this.parentElement.children[3].innerText = this.value.split('\\')[2]" />
                            <button type="button" onclick="this.parentElement.children[2].click()" class="form-control">انتخاب @Model.Documents.ElementAt(j).Evidence.Title</button>
                        </div>
                    }
                </div>

                @if (i != Model.TeamCount - 1)
                {
                    <hr />
                }

            }
        </div>

    </section>

    <div class="mt-3 text-center d-flex justify-content-center align-items-center">
        <button class="btn btn--submit mx-3 px-3">
            ثبت
        </button>
        <button type="button" onclick="history.back()" class="btn btn-secondary d-flex align-items-center">
            <i class="fas fa-reply my-1 mx-2"></i>
        </button>
    </div>

</form>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}