@model Competitions.Web.Areas.Authentication.Models.Users.GetAllUsersVM
@using Competitions.Web.Models


@{
    Layout = "_AdminLayout";
}
<div class="d-flex align-items-start align-items-sm-center justify-content-between mb-2 flex-column flex-sm-row">
    <h3>لیست اعضای سامانه</h3>
    <div class="d-flex align-items-center">
        <a asp-action="Create" class="btn btn--add d-flex align-items-center"><i class="fa fa-plus ms-2"></i>افزودن عضو جدید</a>

        <button type="button" onclick="ShowFilters('users-filters')" class="btn btn--filter d-flex align-items-center  me-2">
            <i class="fa fa-filter ms-2"></i>فیلتر
        </button>
    </div>

</div>


<form method="get">

   <partial name="_FilterPartial" model="@Model.Filters"/>

    <div class="table-overflow card shadow-sm">
        <div class="table ">
            <table class="table text-center" width="100%">
                <thead>
                    <tr>
                        <th class="table__row">ردیف</th>
                        <th>نام و نام خانوادگی</th>
                        <th>کد ملی</th>
                        <th>شماره تلفن</th>
                        <th>نقش</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @if ( Model.Users != null )
                    {
                        @for ( int i = 0 ; i < Model.Users.Count() ; i++ )
                        {
                            <tr>
                                <td>
                                    @(
                                        i + 1 + Model.Filters.Skip
                                        )
                                </td>
                                <td>@Model.Users.ElementAt(i).FullName</td>
                                <td>@Model.Users.ElementAt(i).NationalCode</td>
                                <td>@Model.Users.ElementAt(i).PhoneNumber</td>
                                <td>@Model.Users.ElementAt(i).Role</td>
                                <td>
                                    <div class="table__action">
                                        <a class="btn btn--show" asp-action="Details" asp-route-id="@Model.Users.ElementAt(i).Id"><i class="fa fa-eye"></i></a>
                                        @if ( @Model.Users.ElementAt(i).Role != "ادمین" )
                                        {
                                        <a class="btn btn--edit" asp-action="Update" asp-route-id="@Model.Users.ElementAt(i).Id"><i class="fa fa-edit"></i></a> 
                                            <button type="button" class="btn btn--delete me-2" onclick="Delete('/Authentication/User/Remove/@Model.Users.ElementAt(i).Id' , 'کاربر')">
                                                <i class="fa fa-trash"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <partial name="_PagenationPartial" model="new Pagenation(Model.Filters.Skip , Model.Filters.Take , Model.Filters.Total)" />
</form>
