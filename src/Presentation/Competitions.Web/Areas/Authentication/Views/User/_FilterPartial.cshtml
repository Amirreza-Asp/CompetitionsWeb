@model Competitions.Web.Areas.Authentication.Models.Users.UserFilter;

@{
    String showFilters = Model.IsEmpty() ? "hide" : "";
}

<section class="my-3 @showFilters" id="users-filters">
    <div class="row">
        <div class="mb-3 col-md-3">
            <label class="form-label">نام:</label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="mb-3 col-md-3">
            <label class="form-label">نام خانوادگی:</label>
            <input asp-for="Family" class="form-control" />
        </div>
        <div class="mb-3 col-md-3">
            <label class="form-label">کد ملی:</label>
            <input asp-for="NationalCode" class="form-control" />
        </div>
        <div class="mb-3 col-md-3 pr-5">
            <label class="form-label">نقش:</label>
            <div class="dropdown">
                <select class="form-control" asp-for="RoleId" asp-items="@Model.Roles">
                    <option selected></option>
                </select>
            </div>
        </div>


    </div>
    <div class="text-center">
        <button type="submit" class="btn btn--submit">اعمال فیلتر</button>
    </div>
</section>