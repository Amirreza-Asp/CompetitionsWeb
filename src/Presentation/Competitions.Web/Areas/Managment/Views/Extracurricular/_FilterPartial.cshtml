@model Competitions.Web.Areas.Managment.Models.Extracurriculars.ExtracurricularFilter



@{
    String showFilters = Model.IsEmpty() ? "hide" : "";
}

<section class="my-3 @showFilters" id="ext-filters">
    <div class="row">
        <div class="mb-3 col-md-3">
            <label class="form-label">نام دوره:</label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="mb-3 col-md-3 ">
            <label class="form-label">رشته ورزشی:</label>
            <div class="dropdown"> 
                <select class="form-control" asp-for="SportId" asp-items="@Model.Sports">
                    <option selected></option>
                </select>
            </div>
        </div>
        <div class="mb-3 col-md-3 ">
            <label class="form-label">مکان:</label>
            <div class="dropdown"> 
                <select class="form-control" asp-for="PlaceId" asp-items="@Model.Places">
                    <option selected></option>
                </select>
            </div>
        </div>
        <div class="mb-3 col-md-3 ">
            <label class="form-label">نوع مخاطبین:</label>
            <div class="dropdown"> 
                <select class="form-control" asp-for="AudienceTypeId" asp-items="@Model.AudienceTypes">
                    <option selected></option>
                </select>
            </div>
        </div>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn--submit">اعمال فیلتر</button>
    </div>
</section>