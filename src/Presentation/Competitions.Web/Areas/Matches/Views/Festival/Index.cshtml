@using Competitions.Common.Helpers
@using Competitions.Domain.Entities
@model Competitions.Web.Areas.Managment.Models.Festivals.GetAllFestivalsVM

@{
	Layout = "_AdminLayout";
}


<div class="d-flex align-items-start align-items-sm-center justify-content-between mb-2 flex-column flex-sm-row">
	<h3>لیست جشنواره ها</h3>
	<a asp-action="Create" class="btn btn--add d-flex align-items-center"><i class="fa fa-plus ms-2"></i>افزودن جشنواره جدید</a>

</div>
<form method="get">
<section class="card">
	<div class="table-overflow">
		<div class="table ">
			<table class="table text-center" width="100%">
				<thead>
					<tr class="text-center">
						<th>ردیف</th>
						<th>عنوان</th>
						<th> شروع</th>
						<th>پایان</th>
						@*<th>تصویر</th>*@
						<th>عملیات</th>
					</tr>
				</thead>
				<tbody>
					@for(int i=0;i<Model.Entities.Count();i++)
					{
						<tr class="text-center">
							<td>@(i+1+Model.Filters.Skip)</td>
							<td>@Model.Entities.ElementAt(i).Title</td>
							<td>@Model.Entities.ElementAt(i).Duration.From.ToShamsi()</td>
							<td>@Model.Entities.ElementAt(i).Duration.To.ToShamsi()</td>
			@*				<td>
                                    <img class="img-table" src="@StaticEntitiesDetails.FestivalImagePath@Model.Entities.ElementAt(i).Image.Name">
							</td>*@
							<td>
								<a class="btn btn--show" asp-action="Details" asp-route-id="@Model.Entities.ElementAt(i).Id"><i class="fa fa-eye"></i></a>
								<a class="btn btn--edit me-2" asp-action="Update" asp-route-id="@Model.Entities.ElementAt(i).Id"><i class="fa fa-edit"></i></a>
								<button type="button" class="btn btn--delete me-2" onclick="Delete('/Matches/Festival/Remove/@Model.Entities.ElementAt(i).Id' , 'جشنواره')"><i class="fa fa-trash"></i></button>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>

</section>
	<partial name="_PagenationPartial" model="@new Pagenation(Model.Filters.Skip , Model.Filters.Take , Model.Filters.Total)"/>
</form>


@section Scripts{
	<script src="~/js/utility/removeAlert.js"></script>
}