@using Competitions.Domain.Entities.Managment;
@model Team


@{
    Layout = "_AdminLayout";
}



<div class="d-flex align-items-start align-items-sm-center justify-content-between mb-2 flex-column flex-sm-row">
    <h3>لیست مسابقات</h3>
   
</div>
<form method="get">
    <section class="card">
        <div class="table-overflow">
            <div class="table ">
                <table class="table text-center" width="100%">
                    <thead>
                        <tr class="text-center">
                            <th>ردیف</th>
                            <th>نام و نام خانوادگی</th>
                            <th> شماره دانشجویی</th>
                            <th> رشته تحصیلی</th>
                            <th>شماره تلفن</th>
                            <th>عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Users.Count(); i++)
                        {
                            <tr class="text-center">
                                <td>@(i + 1)</td>
                                <td>@Model.Users.ElementAt(i).User.Name @Model.Users.ElementAt(i).User.Family</td>
                                <td>@Model.Users.ElementAt(i).User.StudentNumber</td>
                                <td>@Model.Users.ElementAt(i).User.College</td>
                                <td>@Model.Users.ElementAt(i).User.PhoneNumber</td>
                                <td>
                                    <a class="btn btn-info text-light" asp-action="UserInfo" asp-route-id="@Model.Users.ElementAt(i).UserId">
                                        <i class="fa fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </section>
</form>
