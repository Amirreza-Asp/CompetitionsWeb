@model Competitions.Domain.Dtos.Matches.Matches.MatchSecondInfoDto
@using Competitions.Common.Helpers
@using Competitions.Domain.Entities;
    using Competitions.Domain.Dtos.Matches.Matches;


@{
    Layout = "_AdminLayout";
    String stepModel = "SecondInfo";
    <partial name="_MatchStepsPartial" model="stepModel" />
}


@section Styles{
    <style>
        #filebtn {
            border: dotted 1px #006ab1;
            color: #006ab1;
            background-color: #e7f5ff;
        }

        .image-container {
            border: 1px solid black;
            border-radius: 4px;
            width: 100%;
            aspect-ratio: 2;
        }

        .image-box {
            object-size: cover;
            object-position: center;
            width: 100%;
            height: 100%;
        }

    </style>
}


    <form method="post" enctype="multipart/form-data">

    @if ( Model.Id.HasValue )
    {
        <input asp-for="Id" hidden id="id" />
        <input asp-for="Image" hidden/>
    }

    <div class="d-flex flex-column flex-md-row align-items-md-center  justify-content-between mb-4">
        @if(Model.ReadOnly){
            <h3 class="mb-4 mb-lg-0">مشاهده مسابقه</h3>
        }
        else if ( Model.Id == default )
        {
            <h3 class="mb-4 mb-lg-0">افزودن مسابقه</h3>
        }
        else
        {

            <h3 class="mb-4 mb-lg-0">ویرایش مسابقه</h3>
        }
    </div>
    <section class="card shadow-sm ">
        <div class="row">
            <div class="mb-3 col-md-6 px-5">
                <div class="image-container">
                    @if ( Model.Id.HasValue )
                    {
                        <img src="@StaticEntitiesDetails.MatchImagePath@Model.Image" alt="image" class="image-box" />
                    }
                    else
                    {
                        <img src="" class="image-box" style="display:none;" />
                    }
                </div>
                @if (!Model.ReadOnly)
                {
                    <div class="mb-3">
                        <input asp-for="Image" accept="image/*" type="file" onchange="enterImage(this)" id="uploadbox" hidden />
                        <button type="button" id="filebtn" onclick="$('#uploadbox').click()" class="form-control">انتخاب عکس</button>
                    </div>
                }
            </div>
            <div class="mb-3 col-md-6">
                <label class="form-label">شرح:</label>
                @if (Model.ReadOnly)
                {
                    <textarea type="text" asp-for="Description" rows="6" class="form-control" disabled></textarea>
                }
                else{
                    <textarea type="text" asp-for="Description" rows="6" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                }
            </div>
        </div>


    </section>

    <div class="mt-3 text-center d-flex justify-content-end align-items-center">
        <a asp-action="FirstInfo" asp-route-id="@Model.Id" asp-route-ReadOnly="@Model.ReadOnly" class="btn btn-secondary d-flex align-items-center">
            <i class="fas fa-reply my-1 mx-2" style="transform:rotateY(180deg)"></i>
        </a>
        @if(Model.ReadOnly){
            <a asp-action="MatchCondition" asp-route-id="@Model.Id" asp-route-ReadOnly="@true" class="btn btn--submit mx-3 px-3">
                مرحله بعد
            </a>
        }
        else{
        <button onclick="return validateInput();" class="btn btn--submit mx-3 px-3">
            مرحله بعد
        </button>
        }
    </div>

</form>



@section Scripts{

    <partial name="_ValidationScriptsPartial" />
    <script>


        function validateInput() {
            if (document.getElementById("id") == null && document.getElementById("uploadbox").value == "") {
                swal({
                    title: `هشدار!`,
                    text: "عکس را وارد کنید",
                    type: "error",
                    cancelButtonText: "بازگشت"
                })
                return false;
            }
            return true;
        }

        function enterImage(imageInput) {
            $('#filebtn').html(imageInput.value);

            const files = imageInput.files;
            if (!files || files.length == 0)
                return;
            const file = files[0];
            const reader = new FileReader();
            reader.readAsDataURL(file);
            reader.onload = () => {

                const image = document.querySelector(".image-box");
                image.src = reader.result;
                image.setAttribute("style", "display:initial");
            }
        }
    </script>
}

