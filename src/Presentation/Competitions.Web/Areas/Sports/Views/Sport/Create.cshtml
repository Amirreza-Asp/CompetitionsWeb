@model Competitions.Domain.Dtos.Sports.Sports.CreateSportDto


@{
    Layout = "_AdminLayout";
}

<form method="post" enctype="multipart/form-data">

    <div class="d-flex flex-column flex-md-row align-items-md-center  justify-content-between mb-4">
        <h3 class="mb-4 mb-lg-0">افزودن رشته ورزشی</h3>
    </div>
    <section class="card shadow-sm ">
        <div class="row">
            <div class="mb-3 col-md-6">
                <label class="form-label">عنوان:</label>
                <input type="text" asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3 col-md-6">
                <label class="form-label">نوع رشته:</label>
                <div class="dropdown">
                    <select asp-for="SportTypeId" asp-items="@Model.SportTypes" class="form-control">
                        <option selected disabled>انتخاب نوع رشته</option>
                    </select>
                </div>
                <span asp-validation-for="SportTypeId" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label">شرح:</label>
            <textarea class="form-control summernote" asp-for="Description" rows="5"></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">عکس:</label>
            <input type="file" accept="image/*" id="uploadBox" hidden asp-for="Image" onchange="$('#choose-file').html(this.value)" />
            <button type="button" onclick="$('#uploadBox').click()" id="choose-file" class="form-control">انتخاب عکس</button>
        </div>
    </section>

    <div class="mt-3 text-center d-flex justify-content-center align-items-center">
        <button onclick="return validateInput()" class="btn btn--submit mx-3 px-3">
            ثبت
        </button>
        <button type="button" onclick="history.back()" class="btn btn-secondary d-flex align-items-center">
            <i class="fas fa-reply my-1 mx-2"></i>
        </button>
    </div>

</form>


@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                height: 250
            });
        });
        function validateInput() {
            if (document.getElementById("uploadBox").value == "") {
                swal({
                    title: `هشدار!`,
                    text: "عکس را وارد کنید",
                    type: "error",
                    cancelButtonText: "بازگشت"
                })
                return false;
            }
            return true;
        }
    </script>
}